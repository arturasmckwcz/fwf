{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The User",
    "required": [
        "person_id",
        "username",
        "password"
    ],
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The id in database"
        },
        "person_id": {
            "$id": "#/properties/person_id",
            "type": "integer",
            "title": "The FK person_id to person table"
        },
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "title": "The username of a user"
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "The passwors of a user"
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The created_at timestamp"
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The updated_at schema timestamp"
        },
        "deleted_at": {
            "$id": "#/properties/deleted_at",
            "type": "string",
            "title": "The deleted_at timestamp"
        }
    },
    "additionalProperties": false
}